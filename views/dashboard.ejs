<title>Dashboard</title>
</head>
<body>


  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/home">My Expense Manager</a>
      </div>
  
      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <li class="active"><a href="/dashboard">Dashboard<span class="sr-only">(current)</span></a></li>
          
        </ul>
        
        <ul class="nav navbar-nav navbar-right">
          <li><a href="/settings">Settings</a></li>
          <li><a href="/signout">Signout</a></li>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>
  <div class="container">
  <h1>Budget is ₹<%= budget %> </h1>
  <button type="button" href="/settings" class="btn btn-secondary btn-lg ejsbut"><a href="/settings">Add Expenditure</a></button>
  <button type="button" onclick="myFunction()" class="btn btn-secondary btn-lg ejsbut">Display Expenses</button>

  <div id="myDIV">
 <% results.forEach(function(item){ %>
  <form action='/checkbox' method="post">
  <div class="form-group ">
    <div class="col-lg-12">
      
          <input id="strike" type="checkbox" value="<%=item._id %>" name='checkbox' onchange="this.form.submit()">
          <%if(item.delete===true){%> 
            <label for="packers" class="striked"><p><%= item.category%> <%= item.item%> ₹<%= item.cost%></p></label>
           <%}else{%>   
            <label for="packers" class="strikethrough"><p><%= item.category%> <%= item.item%> ₹<%= item.cost%></p></label>
            <%}%> 

     </div>
</div>
</form>
    
    <%})%> 
  </div>
  </div>
  <script>
    function myFunction() {
      var x = document.getElementById("myDIV");
      if (x.style.display === "none") {
        x.style.display = "block";
      } else {
        x.style.display = "none";
      }
    }
    </script>
  <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
  </body>
  </html>